{
  "name": "deskforge",
  "version": "1.0.0",
  "description": "All-in-One Developer Workspace - Markdown notes, API testing, secrets management, code snippets, and Git viewing",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @deskforge/renderer dev\" \"wait-on http://localhost:5173 && pnpm --filter @deskforge/main dev\"",
    "build": "pnpm --filter @deskforge/renderer build && pnpm --filter @deskforge/main build",
    "dist": "pnpm build && electron-builder",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "author": "Subham Karande",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
